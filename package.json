{
	"name": "ebc-trip",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev --host 0.0.0.0",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test": "vitest run",
		"prepare": "husky",
		"cspell": "cspell --config cspell.json \"**/*.{ts,tsx,js,jsx,html,json}\" --quiet",
		"format": "prettier --write src",
		"lint": "eslint src",
		"docker-dev-up": "docker-compose -f docker-compose-dev.yaml up -d --build",
		"docker-up": "docker-compose -f docker-compose.yaml up -d --build",
		"docker-dev-down": "docker-compose -f docker-compose-dev.yaml down",
		"docker-down": "docker-compose -f docker-compose.yaml down",
		"analyze": "vite-bundle-visualizer"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^3.0.0",
		"@types/eslint": "^8.56.7",
		"cspell": "^8.6.0",
		"eslint": "^9.0.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.36.0",
		"globals": "^15.0.0",
		"husky": "^9.0.11",
		"prettier": "^3.1.1",
		"prettier-plugin-svelte": "^3.1.2",
		"svelte": "^5.0.0-next.1",
		"svelte-check": "^3.6.0",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.0.0-alpha.20",
		"vite": "^5.0.3",
		"vite-bundle-visualizer": "^1.2.1",
		"vite-tsconfig-paths": "^4.3.2",
		"vitest": "^1.2.0"
	},
	"type": "module"
}
